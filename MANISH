<script>
  function openModal(num) {
    document.getElementById("modalTitle").innerText = `Episode ${num}`;
    document.getElementById("modalText").innerText =
      `This is the full detailed business management and city planning idea for Episode ${num}.`;
    document.getElementById("modal").style.display = "flex";
  }

  function closeModal() {
    document.getElementById("modal").style.display = "none";
  }
</script>

